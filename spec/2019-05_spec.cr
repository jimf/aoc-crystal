require "spec"
require "../src/advent2019_05.cr"

describe Advent2019_05 do
  describe "#part1" do
    it "should solve example input" do
      Advent2019_05.part1("3,0,4,0,99", 5).should eq [5]
    end
  end

  describe "#part2" do
    it "should solve example input" do
      Advent2019_05.part2("3,9,8,9,10,9,4,9,99,-1,8", 5).should eq [0]
      Advent2019_05.part2("3,9,8,9,10,9,4,9,99,-1,8", 8).should eq [1]

      Advent2019_05.part2("3,9,7,9,10,9,4,9,99,-1,8", 5).should eq [1]
      Advent2019_05.part2("3,9,7,9,10,9,4,9,99,-1,8", 8).should eq [0]
      Advent2019_05.part2("3,9,7,9,10,9,4,9,99,-1,8", 9).should eq [0]

      Advent2019_05.part2("3,3,1108,-1,8,3,4,3,99", 5).should eq [0]
      Advent2019_05.part2("3,3,1108,-1,8,3,4,3,99", 8).should eq [1]

      Advent2019_05.part2("3,3,1107,-1,8,3,4,3,99", 5).should eq [1]
      Advent2019_05.part2("3,3,1107,-1,8,3,4,3,99", 8).should eq [0]
      Advent2019_05.part2("3,3,1107,-1,8,3,4,3,99", 9).should eq [0]

      Advent2019_05.part2("3,12,6,12,15,1,13,14,13,4,13,99,-1,0,1,9", 0).should eq [0]
      Advent2019_05.part2("3,12,6,12,15,1,13,14,13,4,13,99,-1,0,1,9", 5).should eq [1]

      Advent2019_05.part2("3,3,1105,-1,9,1101,0,0,12,4,12,99,1", 0).should eq [0]
      Advent2019_05.part2("3,3,1105,-1,9,1101,0,0,12,4,12,99,1", 5).should eq [1]

      Advent2019_05.part2("3,21,1008,21,8,20,1005,20,22,107,8,21,20,1006,20,31,1106,0,36,98,0,0,1002,21,125,20,4,20,1105,1,46,104,999,1105,1,46,1101,1000,1,20,4,20,1105,1,46,98,99", 5).should eq [999]
      Advent2019_05.part2("3,21,1008,21,8,20,1005,20,22,107,8,21,20,1006,20,31,1106,0,36,98,0,0,1002,21,125,20,4,20,1105,1,46,104,999,1105,1,46,1101,1000,1,20,4,20,1105,1,46,98,99", 8).should eq [1000]
      Advent2019_05.part2("3,21,1008,21,8,20,1005,20,22,107,8,21,20,1006,20,31,1106,0,36,98,0,0,1002,21,125,20,4,20,1105,1,46,104,999,1105,1,46,1101,1000,1,20,4,20,1105,1,46,98,99", 9).should eq [1001]
    end
  end
end
